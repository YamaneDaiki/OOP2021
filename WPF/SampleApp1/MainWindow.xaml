<Window x:Class="SampleApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="0,0,-8,0">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" RenderTransformOrigin="0.92,0.456" Width="61">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-51.24"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Button Content="Button" Height="Auto" VerticalAlignment="" Width="49"/>
            <Button Content="Button" Width="75"/>
        </StackPanel>
    </DockPanel>
</Window>
 